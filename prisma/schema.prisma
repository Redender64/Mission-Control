datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

////////////////////////////////////////////////////////////////
// Model for LottoTicket
// --------------------------------
// This is for holding the users choices of numbers.
model LottoTicket {
  id        Int      @id @default(autoincrement())
  userId    String
  numbers   Int[]
  createdAt DateTime @default(now())
}
