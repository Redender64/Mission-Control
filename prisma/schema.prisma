datasource db {
  provider = "sqlite"
  url      = "file:./../database.sqlite"
}

generator client {
  provider = "prisma-client-js"
}

////////////////////////////////////////////////////////////////
// Model for LottoTicket
// --------------------------------
// This is for holding the users choices of numbers.
model LottoTicket {
  id Int @id @default(autoincrement())
  userId Int 
  // Numbers have to be stored individually, because sqlite does not
  // support primitive types.
  numberOne Int
  numberTwo Int
  numberThree Int
  numberFour Int
  numberFive Int
}